@inherits UmbracoViewPage<jakobdahl.Models.LoginModel>
@using Umbraco.Web

@if (Umbraco.MemberIsLoggedOn())
{
	using (Html.BeginUmbracoForm("SubmitLogout", "Member", System.Web.Mvc.FormMethod.Post, new {id="logout"}))
	{
		@Html.AntiForgeryToken()
		var myUser = System.Web.Security.Membership.GetUser();
		if (myUser != null)
		{
			<p><strong>Logged in as</strong></p>
			<p>@myUser.UserName</p>
			<button name="login" class="btn btn-primary" type="submit"><span>Logout </span><i class="fas fa-sign-out-alt"></i></button>
																		 
		}
	}
}





